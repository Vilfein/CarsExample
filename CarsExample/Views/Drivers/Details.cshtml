@model CarsExample.Models.Driver

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Driver</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Znacka</th>
            <th>Model</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Car c in Model.Cars)
        {
            <tr>
                <td>
                    @c.Brand
                </td>
                 <td>@c.Model</td>
            </tr>
        }
    </tbody>
</table>



<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
